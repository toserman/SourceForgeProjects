<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/ap_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/icon"
        android:paddingRight="1dip"
        android:text=""
        android:textColor="#A9F3A9"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!--
accented analogic  
    http://colorschemedesigner.com/#
Primary Color:				
00CC00 	269926	008500	39E639	67E667 
Secondary Color A:				
009999 +++	1D7373	006363	33CCCC	5CCCCC
Secondary Color B:				
9FEE00	86B32D	679B00	B9F73E	C9F76F
Complementary Color:				
FF0000	BF3030	A60000	FF4040	FF7373

complement	
Primary Color:			
00CC00	269926	008500	39E639	67E667
Complementary Color:				
FF0000	BF3030	A60000	FF4040	FF7373
    -->

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingRight="5dip"
        android:src="@drawable/wireless" />

    <TextView
        android:id="@+id/ap_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ap_ssid"
        android:text=""
        android:textColor="#A0E6E6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ap_freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ap_ssid"
        android:layout_toRightOf="@+id/ap_rssi"
        android:paddingLeft="5dip"
        android:text=""
        android:textColor="#A0E6E6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ap_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ap_ssid"
        android:layout_toRightOf="@+id/ap_freq"
        android:paddingLeft="5dip"
        android:text=""
        android:textColor="#A0E6E6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ap_bssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/ap_channel"
        android:text=""
        android:textColor="#A0E6E6"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/wifi_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dip" />

    <TextView
        android:id="@+id/crypted_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ap_ssid"
        android:layout_toRightOf="@+id/ap_channel"
        android:paddingLeft="5dip"
        android:text=""
        android:textColor="#A0E6E6"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/wifi_capabilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ap_ssid"
        android:layout_toRightOf="@+id/crypted_mode"
        android:paddingLeft="1dip" />
    <!-- android:src="@drawable/wifi_connected" -->

</RelativeLayout>