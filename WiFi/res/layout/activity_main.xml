<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/wifi_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/wifi_on"
        android:layout_below="@+id/wifi_on"
        android:text="OFF WIFI" />

    <TextView
        android:id="@+id/wifiInfo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/wifi_off"
        android:layout_marginTop="53dp"
        android:gravity="center"
        android:maxLines="10"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/wifiState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <Button
        android:id="@+id/wifiParam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_off"
        android:layout_centerHorizontal="true"
        android:text="Get Param" />

    <Button
        android:id="@+id/wifi_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifiState"
        android:layout_centerHorizontal="true"
        android:text="ON WIFI" />

</RelativeLayout>